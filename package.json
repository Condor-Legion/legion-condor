{
  "name": "legion-condor",
  "private": true,
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "build": "pnpm -r run build",
    "prepare": "pnpm run --filter @legion/shared build",
    "dev": "pnpm -r run dev",
    "lint": "pnpm -r run lint --if-present",
    "prisma:generate": "pnpm exec prisma generate",
    "prisma:migrate": "pnpm exec prisma migrate dev",
    "prisma:deploy": "pnpm exec prisma migrate deploy",
    "seed": "bun run prisma/seed.ts"
  },
  "devDependencies": {
    "prisma": "6.4.1",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@prisma/client": "6.4.1"
  }
}
